import tkinter as tk
class App:
    def __init__(self,root):
        frame = tk.Frame(root)
        frame.pack(side = tk.LEFT,padx = 50,pady = 100)
        self.hi_there = tk.Button(frame,text = "打个招呼",fg = "black",command =self.say_hi)
        self.hi_there.pack()
    def say_hi(self):
        print("大家好")
root = tk.Tk()
app = App(root)
root.mainloop()
